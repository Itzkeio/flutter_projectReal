rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows a logged-in user to write ONLY to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // This rule allows ANY logged-in user to CREATE a notification event.
    match /profileSaveEvents/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}